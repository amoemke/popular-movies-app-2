<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal|center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_detail_video_trailer_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@android:color/holo_blue_dark"
        android:paddingTop="20dp"
        android:textSize="16sp"/>

    <!--<TextView
        android:id="@+id/tv_detail_video_trailer_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />-->

    <!--<TextView
        android:id="@+id/tv_detail_video_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/iv_detail_youtube_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:padding="20dp"/>

        <TextView
            android:id="@+id/tv_play_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBaseline="@+id/iv_detail_youtube_img"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@drawable/ic_action_play" />

    </RelativeLayout>

    <!--<VideoView
        android:id="@+id/vv_trailer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />-->

    <!--This View serves as a visual divider between list items-->
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@android:color/holo_blue_light" />

</LinearLayout>